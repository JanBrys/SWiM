<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Result">

    <TextView
        android:id="@+id/text_result"
        android:layout_width="64dp"
        android:layout_height="36dp"
        android:layout_marginStart="128dp"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/text_result_info"
        app:layout_constraintTop_toTopOf="@+id/text_result_info" />

    <TextView
        android:id="@+id/text_result_info"
        android:layout_width="118dp"
        android:layout_height="54dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="216dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:text="Informacje na temat uzyskanego BMI"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_result_details_age"
        android:layout_width="258dp"
        android:layout_height="136dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_result_details_"
        android:layout_width="303dp"
        android:layout_height="81dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="256dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>